@model IEnumerable<_421FinalProject.Models.Destination>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficialLanguage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficialSite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageD)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfficialLanguage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfficialSite)
            </td>
            <th>
                @if (item.ImageA != null)
                    @if (item.ImageA != null)
                        {
                            var base64 = Convert.ToBase64String(item.ImageA);
                            var imgSrc = string.Format("data:image/jpg;base64,{0}", base64);
                            <img src="@imgSrc" height="100" width="100" />
                        }
            </th>
            <th>
                @if (item.ImageB != null)
                    @if (item.ImageB != null)
                        {
                            var base64 = Convert.ToBase64String(item.ImageB);
                            var imgSrc = string.Format("data:image/jpg;base64,{0}", base64);
                            <img src="@imgSrc" height="100" width="100" />
                        }
            </th>
            <th>
                @Html.DisplayFor(model => item.ImageC)
            </th>
            <th>
                @Html.DisplayFor(model => item.ImageD)
            </th>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DestID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DestID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DestID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OfficialLanguage)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImageA)
            </dt>
            <dd class="col-sm-10">
                @if (Model.ImageA != null)
                    @if (Model.ImageA != null)
                    {
                        var base64 = Convert.ToBase64String(Model.ImageA);
                        var imgSrc = string.Format("data:image/jpg;base64,{0}", base64);
                        <img src="@imgSrc" height="250" width="400" style="margin:10px"/>
                    }
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <p>Official Language: @Html.DisplayFor(model => model.OfficialLanguage)</p>
                <p>Official Website: @Html.DisplayFor(model => model.OfficialSite)</p>
                <p>Location Key: @Html.DisplayFor(model => model.LocationKey)</p>
            </div>
            <div class="col-lg-6">
                <div id="myMap"></div>
                @if (Model.ImageB != null)
                    @if (Model.ImageB != null)
                    {
                        var base64 = Convert.ToBase64String(Model.ImageB);
                        var imgSrc = string.Format("data:image/jpg;base64,{0}", base64);
                        <img src="@imgSrc" height="100" width="100" />
                    }
                </div>
        </div>
        <button style="margin:10px;" class="btn-secondary" asp-area="" asp-controller="Places" asp-action="SelectIndex" asp-route-id="3" >See locations in this city</button>
    </div>
    <div>

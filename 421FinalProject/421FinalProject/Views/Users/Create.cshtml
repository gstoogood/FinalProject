@model _421FinalProject.Models.CreateUserVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AppUser.Email" class="control-label"></label>
                <input asp-for="AppUser.Email" class="form-control" />
                <span asp-validation-for="AppUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUser.FirstName" class="control-label"></label>
                <input asp-for="AppUser.FirstName" class="form-control" />
                <span asp-validation-for="AppUser.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUser.LastName" class="control-label"></label>
                <input asp-for="AppUser.LastName" class="form-control" />
                <span asp-validation-for="AppUser.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUser.StreetAddress" class="control-label"></label>
                <input asp-for="AppUser.StreetAddress" class="form-control" />
                <span asp-validation-for="AppUser.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUser.State" class="control-label"></label>
                <input asp-for="AppUser.State" class="form-control" />
                <span asp-validation-for="AppUser.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUser.City" class="control-label"></label>
                <input asp-for="AppUser.City" class="form-control" />
                <span asp-validation-for="AppUser.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUser.ZipCode" class="control-label"></label>
                <input asp-for="AppUser.ZipCode" class="form-control" />
                <span asp-validation-for="AppUser.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                @foreach (var item in Model.AllRoles)
                {
                    <tr>
                        <td class="js-export-checkbox">
                            <input name="CheckRoles" type="checkbox" value="@item" /> @item<br />
                        </td>
                    </tr>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
